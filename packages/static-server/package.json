{
	"name": "@node-cli/static-server",
	"version": "3.1.7",
	"license": "MIT",
	"author": "Arno Versini",
	"description": "A simple, zero-configuration, command line HTTP server to serve static files locally",
	"type": "module",
	"types": "./dist/index.d.ts",
	"exports": "./dist/server.js",
	"bin": "dist/server.js",
	"files": [
		"dist",
		"README.md"
	],
	"node": ">=18",
	"scripts": {
		"build": "npm-run-all clean build:types build:js build:barrel",
		"build:barrel": "barrelsby --delete --directory dist --pattern \"**/*.d.ts\" --name \"index.d\"",
		"build:js": "swc --strip-leading-paths --source-maps --out-dir dist src --copy-files",
		"build:types": "tsc",
		"clean": "rimraf dist types coverage",
		"comments:fix": "comments --merge-line-comments 'src/**/*.ts'",
		"lint": "biome lint src",
		"lint:fix": "biome check src --write --no-errors-on-unmatched",
		"watch": "swc --strip-leading-paths --watch --out-dir dist src"
	},
	"dependencies": {
		"@fastify/caching": "9.0.3",
		"@fastify/compress": "8.3.1",
		"@fastify/cors": "11.2.0",
		"@fastify/static": "9.0.0",
		"@node-cli/logger": "workspace:*",
		"@node-cli/parser": "workspace:*",
		"fastify": "5.7.2",
		"fastify-plugin": "5.1.0",
		"fs-extra": "11.3.3",
		"kleur": "4.1.5",
		"open": "11.0.0",
		"pino-pretty": "13.1.3",
		"portfinder": "1.0.38"
	},
	"publishConfig": {
		"access": "public"
	},
	"devDependencies": {
		"@node-cli/comments": "workspace:*",
		"@vitest/coverage-v8": "4.0.18",
		"vitest": "4.0.18"
	}
}
