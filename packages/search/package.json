{
	"name": "@node-cli/search",
	"version": "3.1.3",
	"license": "MIT",
	"author": "Arno Versini",
	"description": "Search for files in a directory",
	"type": "module",
	"types": "./dist/index.d.ts",
	"exports": "./dist/core.js",
	"bin": "dist/search.js",
	"files": [
		"dist",
		"README.md"
	],
	"node": ">=16",
	"scripts": {
		"build": "npm-run-all --serial clean build:types build:js build:barrel",
		"build:barrel": "barrelsby --delete --directory dist --pattern \"**/*.d.ts\" --name \"index.d\"",
		"build:js": "swc --strip-leading-paths --source-maps --out-dir dist src",
		"build:types": "tsc",
		"clean": "rimraf dist types coverage",
		"comments:fix": "comments --merge-line-comments 'src/**/*.ts'",
		"lint": "biome lint src",
		"lint:fix": "biome check src --write --no-errors-on-unmatched",
		"test": "vitest run --globals",
		"test:coverage": "vitest run --coverage --globals",
		"test:watch": "npm run test -- --watch",
		"watch": "swc --strip-leading-paths --watch --out-dir dist src"
	},
	"dependencies": {
		"@node-cli/logger": "workspace:*",
		"@node-cli/parser": "workspace:*",
		"@node-cli/perf": "workspace:*",
		"@node-cli/run": "workspace:*",
		"fs-extra": "11.3.1",
		"kleur": "4.1.5",
		"micromatch": "4.0.8",
		"plur": "5.1.0",
		"pretty-ms": "9.2.0",
		"uuid": "11.1.0"
	},
	"publishConfig": {
		"access": "public"
	},
	"devDependencies": {
		"@node-cli/comments": "workspace:*",
		"@vitest/coverage-v8": "3.2.4",
		"vitest": "3.2.4"
	}
}
