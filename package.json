	},
	"devDependencies": {
		"@versini/dev-dependencies-common": "5.1.1",
		"@versini/dev-dependencies-server": "7.0.3",
		"@versini/dev-dependencies-types": "3.0.7"
	},
	"packageManager": "pnpm@10.12.1"
}
