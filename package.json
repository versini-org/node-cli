{
	"name": "root",
	"private": true,
	"workspaces": [
		"packages/*"
	],
	"description": "Monorepo of small Node CLI helpers, such as logger, run, perf, bundlesize, etc.",
	"scripts": {
		"build": "lerna run build",
		"lint": "lerna run lint",
		"lint:fix": "lerna run lint:fix",
		"lint-staged": "lint-staged --config \"./configuration/lint-staged.config.cjs\"",
		"prepare": "husky",
		"test": "lerna run test",
		"test:coverage": "lerna run test:coverage"
	},
	"devDependencies": {
		"@versini/dev-dependencies-common": "6.0.2",
		"@versini/dev-dependencies-server": "8.0.3",
		"@versini/dev-dependencies-types": "4.0.1"
	},
	"packageManager": "pnpm@10.15.0"
}
